{
  "name": "poc-semantic-release",
  "version": "0.6.0",
  "private": true,
  "scripts": {
    "prepare": "husky || true",
    "format": "prettier . --write --ignore-unknown --ignore-path .gitignore",
    "lint": "next lint --fix",
    "typecheck": "tsc --noEmit",
    "commit": "cz",
    "clean:server": "rm -rf server/dist server/src/routes.ts server/src/swagger.json",
    "build:server": "tsoa spec-and-routes -c server/tsoa.json && tsc -p server/tsconfig.json",
    "clean:client": "rm -rf .next",
    "build:client": "next build",
    "clean": "npm run clean:server && npm run clean:client",
    "build": "npm run build:server && npm run build:client",
    "prestart": "npm run clean && npm run build",
    "start": "NODE_ENV=production node server/dist/index.js",
    "dev": "nodemon"
  },
  "dependencies": {
    "dotenv": "^16.4.4",
    "express": "^4.18.2",
    "next": "14.2.21",
    "react": "^18",
    "react-dom": "^18",
    "swagger-ui-express": "^5.0.0",
    "swr": "^2.2.5",
    "tsoa": "^6.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.19",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/parser": "^7.0.1",
    "autoprefixer": "^10.0.1",
    "commitizen": "^4.3.0",
    "concurrently": "^8.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-next": "14.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "eslint-plugin-unused-imports": "^3.1.0",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.0.3",
    "postcss": "^8",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "semantic-release": "^23.0.2",
    "semantic-release-github-pullrequest": "^1.3.0",
    "tailwindcss": "^3.3.0",
    "ts-node": "^10.9.2",
    "tsc-files": "^1.1.4",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown --ignore-path .gitignore",
    "*.{ts,tsx}": [
      "eslint --fix",
      "tsc-files --noEmit"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
